 //Given an array of integers, rearrange the array in such a way that the first element is first maximum and second element is first minimum.


#include<iostream>
using namespace std;
int main()
{
	int n;
	cin>>n;
	int a[n],b[n],i,flag=true;
	for(i=0;i<n;i++)
	cin>>a[i];
	
	int s=0,l=n-1;
	
	for(i=0;i<n;i++)
	{
		if(flag)
		{
			b[i]=a[l--];
		}
		else
		{
			b[i]=a[s++];
		}
		
		flag=!flag;
		
		
		
	}
	
		for(i=0;i<n;i++)
	cout<<b[i]<<" ";
	
	
}
